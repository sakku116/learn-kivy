# CATATAN!!!!
# kivyMD atau kivy material design adalah
# kivy vanilla yang dimodif elementnya
# yang bisa dilakukan sendiri dengan me modif canvasnya
# dan kivyMD sudah memodifnya dengan membuat element dengan nama baru

<MyLayout>
    GridLayout:
        cols: 1
        size: root.width, root.height

        MDScreen: # Screen atau MDScreen sama halnya seperti gridlayout/boxlayout

            MDCard:
                orientation: "vertical"

                padding: "8dp"
                size_hint: None, None
                size: "280dp", "180dp"
                pos_hint: {"center_x": .5, "center_y": .5}
                MDLabel:
                    text: "Title"
                    theme_text_color: "Secondary"
                    adaptive_height: True
                MDSeparator: 
                    height: "1dp"
                MDLabel:
                    id: body_label
                    text: "Body"

        MDScreen:

            BoxLayout:
                orientation: 'vertical'
                spacing: 10

                MDRectangleFlatButton:
                    text: 'this is button'
                    pos_hint: {'center_x': .5}
                MDRoundFlatButton:
                    text: 'round flat button'
                    pos_hint: {'center_x': .5}
                    
        MDScreen: 
            MDSlider:   
                value: 1
                min: 0
                max: 100
                on_value: root.slider(*args)

