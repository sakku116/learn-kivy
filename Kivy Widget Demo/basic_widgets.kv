                    color: (0,0,0,1)
                    on_active: root.checkbox_click(self, self.active, 'love')
                Label:
                    id: cb_label2
                    font_size: 25
                    text: 'input you'
                    color: (0,0,0,1)
                CheckBox:
                    #group: "cb1" (group untuk membuat radio box, dan hanya bisa terpilih satu dengan radio box di grup yang sama)
                    color: (0,0,0,1)
                    on_active: root.checkbox_click(self, self.active, 'you')
            Label:
                id: cb_label_output
                text: 'string:'
                font_size: 35

    ### SLIDER STUFF ###
    TabbedPanelItem:
        text: 'slider'
        BoxLayout:
            orientation: 'vertical'
            Label:
                id: slider_label
                text: 'slide it'
                font_size: 40
            Slider:
