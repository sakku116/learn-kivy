#: import Factory kivy.factory.Factory
#: set name 'zakky'

<MyPopup@Popup>
    #auto_dismiss: False
    # (untuk mencegah popup hilang saat menyentuh area selain popup)

    auto_dismiss: True
    # (untuk untuk menutup popup dengan klik bagian lain selain popup)

    title: 'Popup Box'
    size_hint: 0.6, 0.4
    pos_hint: {'x':0.2, 'top':0.9}

    GridLayout: # pack widget jadi satu karena popup hanya bisa untuk satu widget
        cols:1
        Label:
            text: 'tap to close the popup'
            font_size: 20

        Button:
            text: 'close me'
            font_size: 25
            on_press: root.dismiss()

    # CATATAN!!!
    # MyPopup harus di deklarasikan diluar MyGridLayout karena, MyGridLayout dipanggil pada py file
    # yang akan muncul secara otomatis di awal, dan kita butuh mypopup ini dipanggil sendiri di
    # kv lang file.
    # '''
    # import Factory kivy.factory.Factory
    # #bind ke button
    # on_release: Factory.MyPopup().open()
    # '''
    
<MyGridLayout>
    do_default_tab: False 

    TabbedPanelItem:
        text: 'playground'

        GridLayout:
            cols: 1

            Label:
                text: f'{self.my_progress}%'
                color: (0,0,0,1)
                font_size: 40
                id: circular_progress
                my_progress: 0
                my_color_before: (0,0,1,1)
                my_color_progress: (1,0,0,1)

                canvas.before:
                    Color:
                        rgba: (1,1,1,1)
                    Ellipse:
                        size: [250+2, 250+2]
                        pos: [self.center_x - 252/2, self.center_y - 252/2]
                        # membuat lingkaran di tengah

                    Color:
                        rgba: self.my_color_before
                    Ellipse:
                        size: [250, 250]
                        pos: [self.center_x - 250/2, self.center_y - 250/2]
                        # membuat lingkaran di tengah
                    
                    Color:
                        rgba: self.my_color_progress
                    Ellipse:
                        size: [250,250]
                        pos: [self.center_x - 250/2, self.center_y - 250/2]
                        angle_end: self.my_progress # initialized by python file

                    Color: 
                        rgba: (1,1,1,1)
                    Ellipse:          
                        size: [200, 200]
                        pos: [self.center_x - 200/2, self.center_y - 200/2]
            
            GridLayout:
                cols:1
                padding: 20
                size_hint: (.5,.5)

                Slider:
                    size_hint: (.5,.5)
                    min: 1
                    max: 360
                    step: 1
                    orientation: 'horizontal'
                    on_value: root.circular_progress_slider(*args)
                    canvas.before:
                        Color:
                            rgba: (1,1,1,.5)
                        Line:
                            width: 1.5
                            rounded_rectangle: self.x, self.y, self.width, self.height, 10
                Button:
                    text: 'press me'
                    on_press: root.animate_progress()

    ### BASIC STUFF ###
    TabbedPanelItem:
        text: 'basic'
        GridLayout:
            cols: 1
            BoxLayout:
                orientation: 'vertical'
                # merubah warna canvas dari boxlayout
                canvas.before:
                    Color:
                        rgba: (0,1,1,1)
                    Rectangle:
                        size: self.size
                        pos: self.pos
                Label:
                    id: basic_label
                    multiline: True
                    size_hint: (1, .5)
                    font_size: 30
                    color: (0,0,0,1)
                    text: 'type something'
                TextInput:
                    id: basic_textinput
                    font_size: 25
                Button:
                    text: 'submit'
                    font_size: 25
                    on_press: root.submit_press()

    ### POPUP STUFF ###
    TabbedPanelItem:
        text: 'popup'
        GridLayout:
            cols: 1

            Label:
                text: 'click to show the popup'
                font_size: 30

            GridLayout: # container
                cols:1
                padding: 40

                Button:
                    text: 'popup'
                    font_size: 30
                    on_release: Factory.MyPopup().open()
                    # (untuk memanggil Layout/class
                    # membutuhkan Factory yang sudah 
                    # di import diatas
                    # Factory.MyPopup().[command syntax])

    ### CANVAS STUFF ###
    TabbedPanelItem:
        text: 'canvas'
        BoxLayout:
            orientation:'vertical'
            spacing: 15
            padding: 20
            canvas.before:
                Color:
                    rgba: (1,1,1,1)
                Rectangle:
                    size: self.size
                    pos: self.pos
            Button:
                text: 'normal button'
                font_size: 30
            Button:
                text: 'basic button'
                font_size: 30
                background_normal: ''
                background_color: 1,0,0,1
            Button:
                text: 'rounded button'
                font_size: 30

                # set default background color ke notthing
                # dan set juga background color ke opacity 0 (transparant)
                # karena kita harus menghapus tampak default dari buttond
                backgorund_normal: ''
                background_color: (0,0,0,0) # transparan

                # dan mengganti tampaknya dengan canvas before
                canvas.before:
                    Color:
                        rgba: (1,0,0,1) if self.state=='normal' else (0,.7,.7,1) # visual feedback
                    RoundedRectangle:
                        size: self.size
                        pos: self.pos
                        radius: [30]
            Button:
                text: 'stroke'
                font_size: 30
                color: (1,144/255,1,1)
                # (jika canvas before menggunakan Line, setidaknya satu value rgb diisi dengan /255 
                # agar terlihat textnya)
                background_color: 0,0,0,0
                background_normal: ''
                canvas.before:
                    Color:
                        rgba: (1,0,0,1) if self.state=='normal' else (0,.7,.7,1)
                    Line:
                        # Line hanya membentuk garis
                        # sehingga didalam line tidak ada warna (mengikuti background normal dan background color / transparan)
                        width: 2
                        rectangle: self.x, self.y, self.width, self.height
                        # rectangle punya 4 value, bisa menggunakan
                        # self.pos[0], self.pos[1], self.size[0], self.size[1]
            Button:
                font_size: 30
                background_color: 0,0,0,0
                background_normal: ''
                text: 'stroke + round'
                color: (1,144/255,1,1)
                canvas.before:
                    Color:
                        rgba: (1,0,0,1) if self.state=='normal' else (0,.7,.7,1)
                    Line:
                        width: 2
                        rounded_rectangle: self.x, self.y, self.width, self.height, 20
                        # rounded_rectangle punya 5 value, value terakhir merupakan radius
                        # yang bisa diisi dengan int, atau memanggil variable dari button
                        # (tidak bisa membuat variable didalam canvas)
                        # bisa menggunakan
                        # self.pos[0], self.pos[1], self.size[0], self.size[1]
                        
                        # self.pos[0] == self.x
                        # self.pos[1] == self.y
                        # self.size[0] == self.width
                        # self.size[1] == self.height
                        
            Button:
                text: 'nested canvas element'
                font_size: 25
                background_color: 0,0,0,0
                backgorund_normal: ''
                radius: 20
                canvas.before:
                    Color:
                        rgba: (1,0,0,1) if self.state=='normal' else (0,.7,.7,1)
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [self.radius]
                    Color:
                        rgba: (0,0,1,1)
                    Line:
                        width: 2
                        rounded_rectangle: self.x, self.y, self.width, self.height, self.radius
            
            Button:
                # 1/2 ellipse button memakan tempat 1 widget diatasnya
                text: 'ellipse button'
                font_size: 25
                background_color: 0,0,0,0
                background_normal: ''
                color: (1,144/255,1,1)
                my_size: 50
                canvas.before:
                    Color:
                        rgba: (0,1,0,1) if self.state == 'normal' else (1,1,1,1)
                    Ellipse:
                        size: [self.my_size, self.my_size]
                        pos: [self.center_x - self.my_size/2, self.center_y - self.my_size/2]

            Button:
                text: 'beautiful button'
                font_size: 25
                background_color: (0,0,0,0)
                background_normal: ''
                color: (57/255, 178/255, 255/255,1)
                border_radius: 20
                canvas.before:
                    Color: 
                        rgba: (0,0,0,.15)
                    Line:
                        width: 1.5
                        rounded_rectangle: [self.x, self.y-3.5, self.width, self.height, self.border_radius]

                    Color:
                        rgba: (1,1,1,1) if self.state == 'normal' else (237/255, 237/255, 237/255,1)
                    RoundedRectangle:
                        pos: [self.pos[0], self.pos[1] if self.state == 'normal' else self.pos[0]-1] # x,y
                        size: self.size
                        radius: [self.border_radius]

                    Color: 
                        rgba: self.color
                    Line:
                        width: 1.5
                        rounded_rectangle: self.pos[0], self.pos[1] if self.state == 'normal' else self.pos[0]-1, self.size[0], self.size[1], self.border_radius
                    

    ### CHECKBOX STUFF ###
    TabbedPanelItem:
        text: 'checkbox'
        GridLayout:
            cols: 1
            GridLayout:
                cols: 2
                canvas.before:
                    Color:
