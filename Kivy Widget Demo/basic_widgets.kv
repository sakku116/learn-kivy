    ### CAROUSEL STUFF ###
    TabbedPanelItem:
        text: 'carousel'

        Carousel:
            direction: 'right'

            BoxLayout:
                Label:
                    text: 'slide to right'
                    font_size: 30
                    color: (0,0,0,1)
                    canvas.before:
