                            rgba: (1,1,1,1)
                        Rectangle:
                            size: self.size
                            pos: self.pos
                        Color: 
                            rgba: (0,0,1,.5)
                        Line:
                            width: 3
                            rectangle: self.pos[0], self.pos[1], self.size[0], self.size[1]
            BoxLayout:
                Label:
