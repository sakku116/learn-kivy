<Main>
    BoxLayout:
        orientation: 'vertical'
        size: root.width, root.height
        padding: 20

        canvas.before:
            Color:
                rgba: (1,1,1,1)
            Rectangle:
                size: self.size
                pos: self.pos

        FloatLayout:

            Button:
                size_hint: None, None
                width: 300
                height: 150
                pos_hint: {'center_x':.5, 'center_y':.5}

                background_normal: ''
                background_color: (0,0,0,0)

                canvas.before:
                    Color:
                        rgba: (1,1,1,1) if self.state == 'normal' else (0,0,0,.1)
                    Rectangle:
                        size: self.size
                        pos: self.pos

                    Color:
                        rgba: (0,0,1,1)
                    Line:
                        width: 2
                        rectangle: self.x, self.y, self.width, self.height

                BoxLayout:
                    orientation: 'horizontal'
                    pos: self.parent.pos
                    size: self.parent.size

                    Image:
                        source: 'joystick.png'
                        size_hint_x: None
                        width: '90px'

                    Label:
                        text: 'games'
                        color: (0,0,0,1)
                        font_size: 30
